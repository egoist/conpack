{
  "private": true,
  "scripts": {
    "test": "npm run lint && jest",
    "lint": "xo"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "babel-preset-env": "^1.6.1",
    "eslint-config-rem": "^4.0.0",
    "jest": "^22.4.2",
    "lerna": "^2.9.0",
    "xo": "^0.20.3"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "xo": {
    "extends": "rem",
    "envs": [
      "jest"
    ],
    "rules": {
      "import/prefer-default-export": "off"
    }
  }
}
